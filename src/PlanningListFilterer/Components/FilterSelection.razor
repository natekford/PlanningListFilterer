@typeparam T

<MudGrid Class="filter-selection-grid" Spacing="0">
	<MudItem xs="12">
		<MudStack Class="filter-selection-stack" Spacing="0">
			<Virtualize Items="@Options">
				<MudCheckBox T="bool" Label="@context" Size="@Size.Small"
							 Color="Color.Primary" UnCheckedColor="Color.Default"
							 Value="@(SelectedItems.Contains(context))"
							 ValueChanged="@(x => OnCheckedChanged(context, x))" />
			</Virtualize>
		</MudStack>
	</MudItem>
	<MudItem xs="12" Class="d-flex align-center justify-end">
		<MudTextField DebounceInterval="100" Placeholder="Search..."
					  Adornment="Adornment.End" AdornmentColor="Color.Secondary"
					  AdornmentIcon="@Icons.Material.Filled.Clear"
					  OnAdornmentClick="@Clear"
					  @bind-Value="@Search"
					  @bind-Value:after="@(() => UpdateOptions(redraw: false))">
		</MudTextField>
	</MudItem>
</MudGrid>